<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context="com.example.administrator.custemview.WeatherActivityNew">

    <RelativeLayout
        android:id="@+id/background"
        android:background="#2ea9df"
        android:cropToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/weather_back_iv"
            android:layout_width="match_parent"
            android:layout_height="145dp" />

        <ImageView
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <ScrollView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <view.ShadowLinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <view.TestView
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="二哥后ihawe；      哦乖哈围观奥iwegaoweg" />

            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="wrap_content">
                <view.FutureWeatherHour
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="wrap_content">
                <view.FutureWeatherDay
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"/>
            </FrameLayout>

            <view.SunRiseView
                android:id="@+id/sunrise"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <view.WeatherImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:text="1" />
        </view.ShadowLinearLayout>
    </ScrollView>


</FrameLayout>
