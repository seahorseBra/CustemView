<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.custemview.MainActivity">

    <view.BarrageViewGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/main_activity_imghandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="图片处理"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/main_activity_dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="下拉回弹"
        android:textColor="@color/colorAccent"/>
 <Button
        android:id="@+id/main_activity_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="动画"
        android:textColor="@color/colorAccent"/>
    <Button
        android:id="@+id/main_activity_scroller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="滑动"
        android:textColor="@color/colorAccent"/>
    <Button
        android:id="@+id/main_activity_horizontal_scroller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="水平滑动"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/main_activity_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="仿QQ侧滑"
        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/main_activity_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="时钟"
        android:textColor="@color/colorAccent"/>
    <Button
        android:id="@+id/main_activity_colormattrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="颜色矩阵"
        android:textColor="@color/colorAccent"/>


        <view.CustomCheckBox
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"></view.CustomCheckBox>
        <view.CustomCheckBox
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"></view.CustomCheckBox>

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <ImageView
            android:id="@+id/svg_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/svg_anim"/>

        <view.ClockView
            android:id="@+id/clock"
            android:transitionName="clock"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </view.BarrageViewGroup>

</LinearLayout>
