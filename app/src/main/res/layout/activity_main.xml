<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.custemview.MainActivity">

    <view.BarrageViewGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_activity_imghandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="图片处理"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="下拉回弹"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_animation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="动画"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_scroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="滑动"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_horizontal_scroller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="水平滑动"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="仿QQ侧滑"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="时钟"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_colormattrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="颜色矩阵"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="登录"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="服务"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="天气"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_mask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="图层混合"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_sql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="数据库"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_opengl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="OpenGL"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_jni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="JNI"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="BT"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="屏幕录制"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="FRAGMENT"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_activity_rx_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="RXJAVA"
            android:textColor="@color/colorAccent" />
        <view.CustomCheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"></view.CustomCheckBox>

        <view.CustomCheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"></view.CustomCheckBox>

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <ImageView
            android:id="@+id/svg_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/svg_anim" />

        <view.ClockView
            android:id="@+id/clock"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="clock" />
    </view.BarrageViewGroup>

</LinearLayout>
